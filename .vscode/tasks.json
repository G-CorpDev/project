{
  "version": "0.1.0",
  "isShellCommand": true,
  "linux": { "command": "sh", "args": ["-c"] },
  "osx": { "command": "sh", "args": ["-c"] },
  "windows": { "command": "powershell", "args": ["-Command"] },
  "tasks": [
    {
      "taskName": "build Server",
      "args": ["mkdir -p server/build && cd server/build && cmake .. && make Server && make cleanup"],
      "showOutput": "always",
      "isShellCommand": true,
      "suppressTaskName": true,
      "isBuildCommand": true,
      "isTestCommand": false,
      "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
    },
    {
      "taskName": "build Test",
      "args": ["mkdir -p server/build && cd server/build && cmake .. && make Test && make coverage && make cleanup"],
      "showOutput": "always",
      "isShellCommand": true,
      "suppressTaskName": true,
      "isBuildCommand": true,
      "isTestCommand": false,
      "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
    },
    {
      "taskName": "build doc",
      "args": ["mkdir -p server/build && cd server/build && cmake .. && make doc && make cleanup"],
      "showOutput": "always",
      "isShellCommand": true,
      "suppressTaskName": true,
      "isBuildCommand": true,
      "isTestCommand": false,
      "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
    }
  ]
}